{
    "compilerOptions": {
        "types": [
            // "vite/client", "jest"
        ],
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,

        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": [
        "src"
        // "jest.config.cjs", "vite.config.ts", "src/setupTests.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/_test" 
    ],
    "references": [{ "path": "./tsconfig.node.json" }]
}
